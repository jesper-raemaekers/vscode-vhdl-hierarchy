{
	"name": "vhdl-hierarchy",
	"displayName": "VHDL hierarchy",
	"description": "A outline provider for VHDL projects",
	"publisher": "JesperRaemaekers",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vhdl-hierarchy.setTopLevel",
				"title": "Set Top Level file"
			},
			{
				"command": "vhdl-hierarchy.analyze",
				"title": "Analyze the workspace",
				"icon": "$(search)"
			},
			{
				"command": "vhdl-hierarchy.refresh",
				"title": "Refresh"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "vhdlHierachy",
					"name": "VHDL Hierachy"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "vhdl-hierarchy.analyze",
					"when": "view == vhdlHierachy",
					"group": "navigation"
				}
			]
		},
		"configuration": [
			{
				"title": "VHDL hierarchy",
				"properties": {
					"VHDL-hierarchy.TopLevelFile": {
						"type": "string",
						"description": "Top level file name",
						"default": ""
					}
				}
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"ts-loader": "^8.0.14",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^5.17.0",
		"webpack-cli": "^4.4.0"
	}
}